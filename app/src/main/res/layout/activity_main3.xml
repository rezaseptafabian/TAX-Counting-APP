<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradeint_bg2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/bgrounded2"
        android:orientation="vertical">

        <ImageView
            android:layout_marginTop="10dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ppn1"
            android:scaleType="fitXY"
            android:layout_gravity="center" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PAJAK PERTAMBAHAN NILAI"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold"
            android:textSize="20dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/baloo"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:gravity="center_horizontal">

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bgrounded3">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Harga Barang"
                android:gravity="center_horizontal"
                android:textStyle="bold"
                android:fontFamily="@font/baloo"
                android:textColor="@color/colorPrimaryDark" />

            <EditText
                android:id="@+id/hbr"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:inputType="number"
                android:gravity="center"
                android:hint="Harga Barang"
                android:fontFamily="@font/baloo"
                android:background="@null"
                android:textColor="@color/black"
                android:textColorHint="@color/colorNavigationIcon"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="370dp"
        android:gravity="center">

        <Button
            android:id="@+id/verif2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hitung"
            android:background="@drawable/bgrounded"
            android:textColor="@color/colorPrimaryDark"
            android:textStyle="bold">
        </Button>

    </LinearLayout>

    <TextView
        android:id="@+id/hasil"
        android:layout_width="300dp"
        android:layout_height="121dp"
        android:hint="HASIL"
        android:textStyle="bold"
        android:textSize="30sp"
        android:textColor="@color/colorPrimaryDark"
        android:textColorHint="@color/colorPrimaryDark"
        android:background="@drawable/bgrounded3"
        android:fontFamily="@font/baloo"
        android:layout_marginTop="480dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-5dp"
            android:background="@color/white"
            app:itemIconTint="@drawable/state_bnve"
            app:itemTextColor="@drawable/state_bnve"
            app:menu="@menu/bottomnavigation_ppn" />

    </RelativeLayout>

</RelativeLayout>