<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/gradeint_bg1"
    android:orientation="horizontal">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo"
        android:scaleType="fitXY"
        android:layout_centerHorizontal="true"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="200dp"
        android:background="@drawable/bgrounded4"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/bgcolor"
                android:gravity="center"
                android:layout_marginRight="70dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonppn"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/ppn1"
                    android:text="PPN"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPN"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/baloo"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/bgcolor"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonpbb"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/pbbya"
                    android:text="PPN"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PBB"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/baloo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/bgcolor"
                android:gravity="center"
                android:layout_marginRight="70dp"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonppnbm"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/tax"
                    android:text="PPN"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="PPNBM"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/baloo" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:background="@drawable/bgcolor"
                android:gravity="center"
                android:layout_marginTop="70dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/buttonsett"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@color/white"
                    android:scaleType="fitXY"
                    android:src="@drawable/settings"
                    android:text="PPN"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SETTINGS"
                    android:textColor="@color/colorPrimaryDark"
                    android:textStyle="bold"
                    android:textSize="18dp"
                    android:layout_marginTop="9dp"
                    android:fontFamily="@font/baloo" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:id="@+id/bn_main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="-5dp"
            android:background="#ffffff"
            app:itemIconTint="@drawable/state_bnve"
            app:itemTextColor="@drawable/state_bnve"
            app:menu="@menu/bottomnavigation_menu" />

    </RelativeLayout>

</RelativeLayout>